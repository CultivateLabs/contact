<% if @message.errors.any? %>
  $("#contact-form-container").html("<%= j render 'contact/messages/form', form: (@form.present? ? @form.guid : nil) %>");
<% else %>
  $("#contact-form-success").show().delay(5000).fadeOut();
  <% @message = Contact::Message.new %>
  $("#contact-form-container").html("<%= j render 'contact/messages/form', form: (@form.present? ? @form.guid : nil) %>");
<% end %>